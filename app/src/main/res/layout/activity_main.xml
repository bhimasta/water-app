<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <ProgressBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="11dp"
            android:layout_height="510dp"
            android:progress="100"
            android:id="@+id/progressBar"
            android:progressDrawable="@drawable/progressbartheme"
            android:visibility="visible" android:indeterminate="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toTopOf="@+id/fabmain"
            app:layout_constraintStart_toEndOf="@+id/gifImageView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="26dp"/>
    <Button
            android:text="@string/message2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:onClick="loadSlides"
            android:id="@+id/progress_bar_increase"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toStartOf="@+id/fabmain" android:layout_marginBottom="21dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="216dp" android:layout_marginRight="216dp"
            android:visibility="invisible"/>
    <Button
            android:text="restart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/stop"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintEnd_toStartOf="@+id/fabmain" android:layout_marginBottom="21dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="216dp" android:layout_marginRight="216dp"
            android:visibility="visible"/>
    <pl.droidsonroids.gif.GifImageView
            android:layout_width="280dp"
            android:layout_height="480dp"
            android:id="@+id/gifImageView"
            android:src="@drawable/flower1"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toStartOf="@+id/progressBar"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/progress_bar_increase"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:layout_marginBottom="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/two"
            app:backgroundTint="@color/colorFab3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/fab1"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="1dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/one"
            app:backgroundTint="@color/colorFab2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/fabmain"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="21dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/three"
            app:backgroundTint="@color/colorFab1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/fab2"
            android:layout_marginEnd="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="21dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabmain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/add"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/progressBar"
            app:layout_constraintStart_toEndOf="@+id/progress_bar_increase"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text="Animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentObjectType" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.501"
            android:textSize="20sp"/>
    <TextView
            android:text="Hydration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentHydrationTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/currentObjectType" android:textSize="20sp"/>
    <TextView
            android:text="Intake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayIntakeTxt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/currentHydrationTxt" android:textSize="20sp"/>
    <TextView
            android:text="Die"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayDieTxt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/todayIntakeTxt" android:textSize="20sp"/>


</android.support.constraint.ConstraintLayout>